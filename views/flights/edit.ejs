<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select><br>
    <label>Airport:
      <select name="airport" required>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
        </select>
    </label><br>
    <label>Flight Number:
      <input type="number" name="flightNo" required min="10" max="9999">
    </label><br>
    <label>Departure Time:
    <input type="datetime-local" name="departs">
    </label><br>
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>